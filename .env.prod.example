# ============================================
# RegularReception Production Environment Variables
# ============================================
# Copy this file to .env.prod and fill in the actual values
# NEVER commit .env.prod to version control!
# ============================================

# ============================================
# General Configuration
# ============================================
APP_VERSION=1.0.0
TZ=Asia/Tehran
DATA_PATH=/var/lib/regularreception

# ============================================
# PostgreSQL Database Configuration
# ============================================
POSTGRES_DB=regularreception
POSTGRES_USER=admin
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# ============================================
# Redis Configuration
# ============================================
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD_HERE

# ============================================
# JWT Configuration
# ============================================
# Generate a strong secret key: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_JWT_SECRET_KEY_BASE64_ENCODED_HERE
JWT_EXPIRATION=604800000
JWT_REFRESH_EXPIRATION=2592000000

# ============================================
# SMS Configuration (MeliPayamak)
# ============================================
SMS_ENABLED=true
SMS_USERNAME=your_melipayamak_username
SMS_PASSWORD=your_melipayamak_password
SMS_API_KEY=c2d0e69c-2d62-488c-82ee-16180dd56c1b
SMS_FROM=10001234

# ============================================
# Payment Gateway Configuration
# ============================================
PAYMENT_MOCK_ENABLED=false
PAYMENT_GATEWAY_URL=https://payment-gateway.example.com
PAYMENT_MERCHANT_ID=your_merchant_id
PAYMENT_API_KEY=your_payment_api_key
PAYMENT_CALLBACK_URL=https://yourdomain.com/api/payments/callback

# ============================================
# Rate Limiting (Bucket4j)
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_CAPACITY=100
RATE_LIMIT_REFILL_TOKENS=100
RATE_LIMIT_REFILL_DURATION=60

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=INFO
LOG_LEVEL_SPRING=WARN
LOG_LEVEL_HIBERNATE=WARN

# ============================================
# Application URLs
# ============================================
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
FRONTEND_URL=https://yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com
SUPPORT_EMAIL=support@yourdomain.com

# ============================================
# Backup Configuration (Optional)
# ============================================
BACKUP_RETENTION_DAYS=30
BACKUP_REMOTE_PATH=

# ============================================
# Monitoring & Metrics (Optional)
# ============================================
METRICS_ENABLED=true
PROMETHEUS_ENABLED=true

# ============================================
# Docker Configuration
# ============================================
COMPOSE_PROJECT_NAME=regularreception

# ============================================
# SSL/TLS Configuration
# ============================================
DOMAIN_NAME=yourdomain.com
SSL_EMAIL=admin@yourdomain.com
