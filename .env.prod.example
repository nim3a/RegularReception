# Production Environment Variables
# Copy this file to .env.prod and fill in the actual values

# ========================================
# Database Configuration
# ========================================
POSTGRES_DB=daryaftdb
POSTGRES_USER=daryaftuser
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# ========================================
# JWT Configuration
# ========================================
JWT_SECRET=CHANGE_ME_LONG_RANDOM_SECRET_KEY_AT_LEAST_256_BITS
JWT_EXPIRATION=86400000

# ========================================
# SMS Configuration
# ========================================
SMS_ENABLED=true
SMS_PROVIDER=kavenegar
SMS_API_KEY=YOUR_SMS_API_KEY_HERE
SMS_SENDER=YOUR_SMS_SENDER_NUMBER

# ========================================
# Rate Limiting Configuration
# ========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_LOGIN_REQUESTS=5
RATE_LIMIT_LOGIN_DURATION=1
RATE_LIMIT_API_REQUESTS=100
RATE_LIMIT_API_DURATION=1

# ========================================
# Logging Configuration
# ========================================
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_APP=INFO
